<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="WeatherSelectedDataModel"
            type="data.weather.com.weatherforecast.model.WeatherSelectedDataModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.WeatherDetailsActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_64sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_margin="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_22sdp"
                android:layout_marginBottom="@dimen/_22sdp"
                android:background="@drawable/rounded_corner_white_btn_bg"
                android:gravity="center"
                android:text="@{WeatherSelectedDataModel.cityName}"
                android:textColor="@color/colorAppTextDark"
                android:textSize="@dimen/_15sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_margin="@dimen/_6sdp"
                android:background="@drawable/rounded_corner_white_btn_bg"
                android:gravity="center"
                android:text="@{WeatherSelectedDataModel.sunrise}"
                android:textColor="@color/colorAppTextDark"
                android:textSize="@dimen/_13sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_margin="@dimen/_6sdp"
                android:background="@drawable/rounded_corner_white_btn_bg"
                android:gravity="center"
                android:text="@{WeatherSelectedDataModel.sunset}"
                android:textColor="@color/colorAppTextDark"
                android:textSize="@dimen/_13sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_margin="@dimen/_6sdp"
                android:background="@drawable/rounded_corner_white_btn_bg"
                android:gravity="center"
                android:text="@{WeatherSelectedDataModel.maxtemp}"
                android:textColor="@color/colorAppTextDark"
                android:textSize="@dimen/_13sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_margin="@dimen/_6sdp"
                android:background="@drawable/rounded_corner_white_btn_bg"
                android:gravity="center"
                android:text="@{WeatherSelectedDataModel.mintemp}"
                android:textColor="@color/colorAppTextDark"
                android:textSize="@dimen/_13sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_margin="@dimen/_6sdp"
                android:background="@drawable/rounded_corner_white_btn_bg"
                android:gravity="center"
                android:text="@{WeatherSelectedDataModel.condition}"
                android:textColor="@color/colorAppTextDark"
                android:textSize="@dimen/_13sdp"/>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</layout>